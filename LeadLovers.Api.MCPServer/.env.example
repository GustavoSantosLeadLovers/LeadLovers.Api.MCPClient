# =============================================================================
# CONFIGURAÇÃO DA API LEADLOVERS
# =============================================================================

# URL base da API LeadLovers
LEADLOVERS_API_URL=https://api.leadlovers.com

# Token de autenticação da API LeadLovers
# Obtenha em: https://app.leadlovers.com/configuracoes/api
LEADLOVERS_API_TOKEN=your_leadlovers_api_token_here

# Timeout para requisições à API (em ms, padrão: 30000)
LEADLOVERS_API_TIMEOUT=30000

# =============================================================================
# CONFIGURAÇÃO DE IA - ANTHROPIC CLAUDE
# =============================================================================

# Chave da API Anthropic Claude (obrigatório)
# Obtenha em: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Modelo do Claude a ser usado
# Opções: claude-3-opus-20240229, claude-3-sonnet-20240229, claude-3-haiku-20240307
ANTHROPIC_MODEL=claude-3-haiku-20240307

# Temperatura para geração de texto (0.0 a 1.0, padrão: 0.7)
ANTHROPIC_TEMPERATURE=0.7

# Máximo de tokens na resposta (padrão: 4096)
ANTHROPIC_MAX_TOKENS=4096

# =============================================================================
# CONFIGURAÇÃO DE IA - OPENAI (OPCIONAL)
# =============================================================================

# Chave da API OpenAI (para futuras integrações)
# Obtenha em: https://platform.openai.com/
# OPENAI_API_KEY=your_openai_api_key_here

# Modelo do GPT a ser usado
# Opções: gpt-4, gpt-4-turbo-preview, gpt-3.5-turbo
# OPENAI_MODEL=gpt-4-turbo-preview

# =============================================================================
# CONFIGURAÇÃO DO BEEFREE EMAIL BUILDER
# =============================================================================

# URL da API BeeFree
BEEFREE_API_URL=https://api.beefree.io

# Token de autenticação BeeFree
# Obtenha em: https://developers.beefree.io/
BEEFREE_API_TOKEN=your_beefree_token_here

# Template ID padrão (opcional)
BEEFREE_DEFAULT_TEMPLATE_ID=

# =============================================================================
# CONFIGURAÇÃO DO SERVIDOR MCP
# =============================================================================

# Nome do servidor MCP (identificador único)
MCP_SERVER_NAME=leadlovers-mcp

# Versão do servidor MCP
MCP_SERVER_VERSION=2.2.1

# Modo de transporte (stdio | websocket)
MCP_TRANSPORT=stdio

# Habilitar cache de respostas (true | false)
MCP_ENABLE_CACHE=true

# TTL do cache em segundos (padrão: 300 = 5 minutos)
MCP_CACHE_TTL=300

# =============================================================================
# CONFIGURAÇÃO DE AMBIENTE
# =============================================================================

# Ambiente de execução (development | staging | production)
NODE_ENV=development

# Nível de log (trace | debug | info | warn | error | fatal)
LOG_LEVEL=info

# Habilitar logs detalhados de debug
DEBUG_MODE=false

# =============================================================================
# CONFIGURAÇÃO DE SEGURANÇA E LIMITES
# =============================================================================

# Máximo de operações em lote permitidas
MAX_BULK_OPERATIONS=100

# Rate limiting - requisições por hora
RATE_LIMIT_REQUESTS=1000

# Janela de tempo para rate limiting (em ms, padrão: 3600000 = 1 hora)
RATE_LIMIT_WINDOW_MS=3600000

# Tamanho máximo de prompt (em caracteres)
MAX_PROMPT_LENGTH=5000

# Timeout para processamento de ferramentas MCP (em ms)
MCP_TOOL_TIMEOUT=60000

# =============================================================================
# CONFIGURAÇÃO DE VALIDAÇÃO
# =============================================================================

# Validar emails usando regex estrito (true | false)
STRICT_EMAIL_VALIDATION=true

# Validar telefones no formato brasileiro (true | false)
VALIDATE_BRAZILIAN_PHONE=true

# Permitir criação de leads duplicados (true | false)
ALLOW_DUPLICATE_LEADS=false

# =============================================================================
# CONFIGURAÇÃO DE MONITORAMENTO
# =============================================================================

# Habilitar coleta de métricas (true | false)
ENABLE_METRICS=false

# Porta para endpoint de métricas Prometheus
METRICS_PORT=9091

# Habilitar tracing distribuído (true | false)
ENABLE_TRACING=false

# URL do coletor de traces (Jaeger/Zipkin)
TRACE_COLLECTOR_URL=

# =============================================================================
# CONFIGURAÇÃO DE DESENVOLVIMENTO
# =============================================================================

# Modo de hot reload (apenas desenvolvimento)
WATCH_MODE=true

# Habilitar source maps
ENABLE_SOURCE_MAPS=true

# Porta para debugging remoto
DEBUG_PORT=9229

# =============================================================================
# CONFIGURAÇÃO DE TESTES
# =============================================================================

# Usar mocks para APIs externas em testes
USE_TEST_MOCKS=false

# Timeout para testes (em ms)
TEST_TIMEOUT=10000

# Caminho para fixtures de teste
TEST_FIXTURES_PATH=./tests/fixtures