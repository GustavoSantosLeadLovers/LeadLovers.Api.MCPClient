# =============================================================================
# CONFIGURAÇÃO DO SERVIDOR
# =============================================================================

# Ambiente de execução (development | production | test)
NODE_ENV=development

# Porta do servidor HTTP/WebSocket (padrão: 4444)
PORT=4444

# Versão da aplicação
VERSION=1.0.0

# URLs permitidas para CORS (separadas por vírgula)
# Em desenvolvimento, deixe vazio para permitir todas as origens
# Em produção, especifique os domínios permitidos
DOMAIN_URL=

# =============================================================================
# CONFIGURAÇÃO DE LOGGING
# =============================================================================

# Nível de log (trace | debug | info | warn | error | fatal)
LOG_LEVEL=info

# =============================================================================
# CONFIGURAÇÃO DE AUTENTICAÇÃO SSO
# =============================================================================

# URL do servidor SSO LeadLovers
SSO_API_URL=https://sso.leadlovers.com/

# Chave secreta para JWT (IMPORTANTE: mude para uma chave segura em produção)
# Exemplo de chave segura: use 'openssl rand -base64 32' para gerar
API_SECRET=TESTE

# Tempo de expiração do token JWT (em segundos, padrão: 3600 = 1 hora)
JWT_EXPIRATION=3600

# =============================================================================
# CONFIGURAÇÃO DO REDIS (Cache e Sessões)
# =============================================================================

# URL de conexão do Redis (opcional em desenvolvimento)
REDIS_URL=redis://localhost:6379

# Senha do Redis (se configurado)
# REDIS_PASSWORD=

# TTL para cache de sessões (em segundos, padrão: 3600)
REDIS_SESSION_TTL=3600

# =============================================================================
# CONFIGURAÇÃO DO WEBSOCKET
# =============================================================================

# Timeout de conexão WebSocket (em ms, padrão: 10000)
WS_CONNECTION_TIMEOUT=10000

# Intervalo de ping/pong (em ms, padrão: 30000)
WS_PING_INTERVAL=30000

# Máximo de reconexões automáticas
WS_MAX_RECONNECTION_ATTEMPTS=5

# =============================================================================
# CONFIGURAÇÃO DO MCP SERVER
# =============================================================================

# Caminho para o executável do MCP Server
# Em desenvolvimento: caminho relativo ou absoluto para o servidor
# Em produção: pode ser um path do sistema
MCP_SERVER_PATH=../LeadLovers.Api.MCPServer/dist/index.js

# Comando para executar o MCP Server (node ou tsx)
MCP_SERVER_COMMAND=node

# Timeout para comunicação com MCP Server (em ms)
MCP_TIMEOUT=30000

# =============================================================================
# CONFIGURAÇÕES DE SEGURANÇA
# =============================================================================

# Rate limiting - requisições por minuto por IP
RATE_LIMIT_PER_MINUTE=60

# Tamanho máximo do payload (em MB)
MAX_PAYLOAD_SIZE=10

# Lista de IPs permitidos (separados por vírgula, vazio = todos permitidos)
ALLOWED_IPS=

# =============================================================================
# CONFIGURAÇÕES DE MONITORAMENTO
# =============================================================================

# Habilitar métricas de performance
ENABLE_METRICS=false

# Porta para métricas Prometheus (se habilitado)
METRICS_PORT=9090

# =============================================================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# =============================================================================

# Habilitar modo debug (mais logs e informações)
DEBUG_MODE=false

# Habilitar Swagger UI em produção (padrão: false)
ENABLE_SWAGGER_PROD=false